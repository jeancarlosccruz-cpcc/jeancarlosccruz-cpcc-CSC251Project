   //Include a method that calculates and returns the price of the insurance policy* 
   
   public double calculatePolicyPrice() 
 {  
   double price = 600.00;  
   
      {  
       // If the Policyholder is over 50 years old there is an additional fee of $753
      if (policyholderAge > 50) 
      { 
        price += 75.0;
        }
        
      if (policyholdersmokingStatu.equalsIgnoreCase ("smoker")) 
      { 
        price += 100.0;
        } 
     // Calculate the policy holder BMI of over 35 
     double bmi = (providerWeight * 703.0) / (providerHeigh * providerweight); 
     
     if (bmi > 35) 
     {
     price += (bmi - 35) * 20.0; 
     } 
     return price;
   }
   
